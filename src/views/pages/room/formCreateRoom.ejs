</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../../layout/sidebar.ejs') %>

            <!-- content -->
            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    <%- include('../../layout/navbar.ejs') %>

                        <!--  Content -->
                        <div class="container-fluid ">
                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-center mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Create Room</h1>
                            </div>

                            <div class="row d-flex justify-content-center">
                                <div class="col-lg-5 col-md-6">
                                    <form class="user" action="/room/create" method="post">
                                        <div class="form-floating form-group">
                                            <input type="text" class="form-control form-control-user" id="floatingInput" placeholder="room code"
                                                name="code" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Room Code</label>
                                        </div>
                                        <div class="form-floating form-group">
                                            <input type="text" class="form-control form-control-user" id="floatingInput" placeholder="description"
                                                name="description" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Description</label>
                                        </div>
                                        <div class="form-floating form-group">
                                            <input type="number" class="form-control form-control-user" placeholder="price"
                                                id="floatingInput" name="price" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Price</label>
                                        </div>
                                        <div class="form-floating form-group">
                                            <input type="number" class="form-control form-control-user" id="floatingInput"
                                                placeholder="name@example.com" name="size" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Size</label>
                                        </div>
                                        <div class="form-floating form-group">
                                            <input type="number" class="form-control form-control-user" id="floatingInput" placeholder="Number people"
                                                name="number_people" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Number people</label>
                                        </div>
                                        <div class="form-floating form-group">
                                            <input type="text" class="form-control form-control-user" id="floatingInput" placeholder="image"
                                                name="image" />
                                            <label for="floatingInput" class="ms-1 text-secondary">Link image</label>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Save
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                </div>

                <!-- Footer -->
                <%- include('../../layout/footer.ejs') %>
            </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    Select "Logout" below if you are ready to end your current session.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">
                        Cancel
                    </button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="../vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="../js/demo/chart-area-demo.js"></script>
    <script src="../js/demo/chart-pie-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>